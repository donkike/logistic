<%= form_for @main_activity do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :time_main_activity %><br />
    <%= f.text_field :time_main_activity %>
  </p>
  <p><%= f.submit %></p>
<% end %>
