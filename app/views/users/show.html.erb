<% title "User #{@user.username}" %>


<%= user_information @user %>

<% admin_area do %>
  <% if admin? or @user == current_user %>
    <%= link_to t(:edit), edit_vmodule_user_path(@user.vmodule,@user) %> |
    <%= link_to t(:destroy), [@user.vmodule,@user], :confirm => 'Are you sure?', :method => :delete %> |
    <%= link_to t(:return_to_module), vmodule_path(@user.vmodule) %>
  <% else %>
    <%= link_to t(:return_to_module), vmodule_path(@user.vmodule) %>
  <% end %>
<% end %>


